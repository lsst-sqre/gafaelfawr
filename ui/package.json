{
  "name": "gafaelfawr",
  "private": true,
  "description": "The user-facing UI for Gafaelfawr",
  "version": "9.6.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build --prefix-paths",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{json,css,graphql,yaml}\"",
    "format:check": "prettier --check \"**/*.{json,css,graphql,yaml}\"",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "lint": "eslint *.js src",
    "lint:fix": "eslint *.js src --fix"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "formik": "^2.4.5",
    "gatsby": "^5.13.5",
    "gatsby-plugin-use-query-params": "^1.0.1",
    "prop-types": "^15.8.0",
    "react": "^18.2.0",
    "react-alert": "^7.0.3",
    "react-alert-template-basic": "1.0.2",
    "react-aria-modal": "^5.0.2",
    "react-datepicker": "^7.3.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.2.1",
    "react-is": "^18.3.1",
    "react-table": "^7.7.0",
    "styled-components": "^6.1.13",
    "use-query-params": "^1.2.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.24.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-wesbos": "^4.3.1",
    "eslint-plugin-html": "^8.1.1",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lsst-sqre/gafaelfawr"
  },
  "bugs": {
    "url": "https://github.com/lsst-sqre/gafaelfawr/issues"
  },
  "eslintConfig": {
    "extends": [
      "wesbos"
    ],
    "rules": {
      "jsx-a11y/label-has-associated-control": [
        2,
        {
          "controlComponents": [
            "Field"
          ]
        }
      ],
      "jsx-a11y/control-has-associated-label": [
        2,
        {
          "ignoreElements": [
            "td"
          ]
        }
      ],
      "react/no-unstable-nested-components": [
        "error",
        {
          "allowAsProps": true
        }
      ]
    }
  }
}
